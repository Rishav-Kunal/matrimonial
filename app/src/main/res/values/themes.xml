<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatrimonialApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_100</item>
        <item name="colorPrimaryVariant">@color/light_blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_100</item>
        <item name="colorSecondaryVariant">@color/pink_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/light_blue_50</item>
        <item name="colorCard">@color/white</item>
    </style>
    <style name="Text.Normal" parent="Theme.MatrimonialApp">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="Text.SemiBold" parent="Text.Normal">
        <item name="android:fontFamily">@font/rubik_semibold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="Text.SemiBoldWhite" parent="Text.Normal">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RoundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>